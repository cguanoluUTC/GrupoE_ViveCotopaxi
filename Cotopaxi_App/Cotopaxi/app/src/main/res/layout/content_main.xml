<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.davicho.cotopaxi.MainActivity"
    android:background="@mipmap/dos"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_weight="0.23">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:layout_weight="2.03">

                    <TextView
                        android:layout_width="86dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:layout_weight="0.21" />

                    <ImageView
                        android:layout_width="111dp"
                        android:layout_height="98dp"

                        android:id="@+id/imageView"
                        android:background="@mipmap/logo3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:layout_weight="1" />
                </LinearLayout>

                <TextView
                    android:text="                     !...Sus siete maravillas...!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:textColor="@android:color/background_dark"
                    android:layout_weight="1"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:layout_weight="0.86"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="88dp">

                <Button
                    android:id="@+id/button1"

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:background="@drawable/btn_circle_default"
                    android:drawableTop="@mipmap/ic_location_city_white_24dp"

                    android:text="Latacunga"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_weight="0.17" />
                <Button
                    android:id="@+id/button9"

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:background="@drawable/btn_circle_default"
                    android:drawableTop="@mipmap/ic_location_city_white_24dp"

                    android:text="La Mana"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/background_light" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:layout_weight="0.17" />

                <Button
                    android:id="@+id/button2"

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:background="@drawable/btn_circle_default"
                    android:drawableTop="@mipmap/ic_location_city_white_24dp"

                    android:text="Pujilí"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/background_light" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/button3"

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:background="@drawable/btn_circle_default"
                    android:drawableTop="@mipmap/ic_location_city_white_24dp"

                    android:text="Pangua"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:layout_weight="0.17" />

                <Button
                    android:id="@+id/button8"

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:background="@drawable/btn_circle_default"
                    android:drawableTop="@mipmap/ic_location_city_white_24dp"

                    android:text="Sigchos"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:layout_weight="0.17" />

                <Button
                    android:id="@+id/button10"

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:background="@drawable/btn_circle_default"
                    android:drawableTop="@mipmap/ic_location_city_white_24dp"

                    android:text="Saquisilí"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/background_light" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="69dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5" />

                <TextView
                    android:layout_width="43dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_weight="0.36" />

                <Button
                    android:id="@+id/button7"

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:background="@drawable/btn_circle_default"
                    android:drawableTop="@mipmap/ic_location_city_white_24dp"

                    android:text="Salcedo"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
